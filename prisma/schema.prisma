generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RequestType {
  MENU
  CUENTA
  SERVILLETAS
  CUBIERTOS
  SALSAS
  RETIRAR_PLATOS
  LIMPIAR_MESA
  OTRO
}

enum RequestStatus {
  PENDIENTE
  EN_CAMINO
  COMPLETADO
}

model Table {
  id   Int    @id @default(autoincrement())
  name String @unique

  requests Request[]

  @@map("tables")
}

model Waiter {
  id   Int    @id @default(autoincrement())
  name String

  requests Request[]

  @@map("waiters")
}

model Request {
  id          Int           @id @default(autoincrement())
  tableId     Int
  type        RequestType
  notes       String?
  status      RequestStatus @default(PENDIENTE)
  createdAt   DateTime      @default(now())
  acceptedAt  DateTime?
  completedAt DateTime?
  waiterId    Int?

  table  Table   @relation(fields: [tableId], references: [id])
  waiter Waiter? @relation(fields: [waiterId], references: [id])

  @@map("requests")
}
