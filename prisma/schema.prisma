// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RequestType {
  MENU
  CUENTA
  SERVILLETAS
  CUBIERTOS
  SALSAS
  RETIRAR_PLATOS
  LIMPIAR_MESA
  OTRO
}

enum RequestStatus {
  PENDIENTE
  EN_CAMINO
  COMPLETADO
}

// Nuevo: Añadimos prioridad para destacar peticiones urgentes
enum Priority {
  BAJA
  MEDIA
  ALTA
}

model Table {
  id   Int    @id @default(autoincrement())
  name String @unique

  requests Request[]

  @@map("tables")
}

model Waiter {
  id   Int    @id @default(autoincrement())
  name String

  requests Request[]

  @@map("waiters")
}

model Request {
  id          Int           @id @default(autoincrement())
  tableId     Int
  type        RequestType
  notes       String?
  status      RequestStatus @default(PENDIENTE)
  // Nuevo: Campo para prioridad
  priority    Priority      @default(BAJA)
  createdAt   DateTime      @default(now())
  acceptedAt  DateTime?
  completedAt DateTime?
  waiterId    Int?

  table  Table   @relation(fields: [tableId], references: [id])
  waiter Waiter? @relation(fields: [waiterId], references: [id])

  // Nuevo: Relación con el historial de logs
  logs RequestLog[]

  @@map("requests")
}

// Nuevo: Modelo para registrar cada cambio de estado de una petición
model RequestLog {
  id        Int           @id @default(autoincrement())
  requestId Int
  status    RequestStatus
  changedAt DateTime      @default(now())

  request Request @relation(fields: [requestId], references: [id])

  @@map("request_logs")
}